<section>
    <a href="/profile"> &larr; To Profile</a>
    <h2 class="title"> What's on your mind? </h2>

    <form class="col-lg-6 offset-lg-3">
        <div class="form-outline mb-4">
            <label for="post-title">Title:</label>
            <input type="text" id="post-title" class="form-control" placeholder="Title of your post" />
        </div>

        <div class="form-outline mb-4">
            <label for="post-content">Create new post</label>
            <textarea class="form-control" id="post-content" rows="4" placeholder="Start typing your post"></textarea>
        </div>

        <button type="submit" class="btn btn-primary btn-block mb-4">Create post</button>
    </form>
</section>

